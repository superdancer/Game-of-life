#include<iostream>
#include<time.h>
#include<windows.h>
using namespace std;
const int row=25,col=50;
int arr[row][col]={0};
int aliveNeighbours(int i,int j)
{
	int count;
	count=arr[i-1][j-1]+arr[i][j-1]+arr[i+1][j-1]+arr[i+1][j]+arr[i+1][j+1]+arr[i][j+1]+arr[i-1][j+1]+arr[i-1][j];
	return count;
}
bool isEdge(int i,int j)
{
	if(0==i||0==j||row-1==i||col-1==j) return true;
	else return false;
}
int main()
{
	const int a=12,b=13,c=14,d=15;
	arr[a][b]=1,arr[a][c]=1,arr[b][c]=1,arr[b][d]=1,arr[c][d]=1,arr[c][c]=1,arr[a][a]=1,arr[b][b]=1,arr[c][c]=1;
	while(1)
	{
		for(int m=0;m<row;m++)
		{
			for(int n=0;n<col;n++)
			{
				int num;
				if(isEdge(m,n))
				{
					arr[m][n]=0;
				}
				else
				{
					num=aliveNeighbours(m,n);
					if (num<2||num>3)
					{
						arr[m][n]=0;
					}
					else if(2==num)
					{
						if(0==arr[m][n]) arr[m][n]=0;
						else arr[m][n]=1;
					}
					else if(3==num)
					{
						arr[m][n]=1;
					}
				}
				cout<<arr[m][n];
			}
			cout<<endl;
		}
		Sleep(100);
		system("cls");
	}
	return 0;
}
